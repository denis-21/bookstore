<h3>New review for
  <span class="font_size_18 padding_left_20px"><%=link_to @book.title,book_path(@book),class: 'text-info'%></span>
</h3>
<br>
<%=render 'shared/error_msg', object: @rating%>
<%= form_for @rating,url: book_ratings_path(@book), method: :post  do |f| %>
    <div class="form-group">
      <span class="star-rating">
       <% (1..5).each do |value| %>
            <%= f.radio_button :rating, value, id:"rating_rating_number_#{value}",checked:true%>
            <i></i>
       <% end %>
      </span>
    </div>
    <div class="form-group">
      <%= f.label :review,"Text Review" %>
      <%= f.text_area :review, rows: 3, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'ADD', class: 'btn btn-success' %>
    </div>
<% end %>
